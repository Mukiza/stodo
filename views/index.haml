%div
  %h3.pull_left
    List of Todos
  %a.pull_right
  %a{:href=>'/new', :class=>'pull_right'}
    Add
%ul
  -if @tasks
    -@tasks.each do|task|
      %li
        =task.name 
        =task.description
        =task.date
    -@task
  -else
    %br
    .alert.alert-warning.alert-dismissable
      %button.close
      %h4
        You do not have any tasks yet
